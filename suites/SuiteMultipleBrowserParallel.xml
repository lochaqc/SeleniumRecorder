<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Suite Login Test" parallel="tests" verbose="1">

    <test name="Login Test on Edge" parallel="methods">
        <parameter name="browser" value="Edge"/>
        <classes>
            <class name="lochaqc.testcases.LoginTest" />

        </classes>
    </test>

    <test name="Login Test on Chrome" parallel="methods">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="lochaqc.testcases.DashboardTest" />

        </classes>
    </test>

    <test name="Login Test on Firefox" parallel="methods">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="lochaqc.testcases.CustomersTest" />

        </classes>
    </test>



</suite>